{
    "version": "1.5.0",
    "compilerOptions": {
        "target": "es5",
        "outDir": "../build",
        "module": "commonjs",
        "isolatedModules": false,
        "jsx": "react",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "declaration": false,
        "noImplicitAny": false,
        "removeComments": true,
        "noLib": false,
        "preserveConstEnums": true,
        "suppressImplicitAnyIndexErrors": true,
        "sourceMap": true
    },
    "filesGlob": [
        "./**/*.ts",
        "./**/*.tsx",
        "./typings/**/*.d.ts",
        "!./node_modules/**/*"
    ],
    "files": [
        "./index.ts",
        "./posts/controllers/helloWorld.controller.ts",
        "./posts/routes.ts",
        "./routes.ts",
        "./routingConfigurator.ts",
        "./tests/mockeryInit.ts",
        "./tests/routingConfigurator.test.ts",
        "./typings/bluebird/bluebird.d.ts",
        "./typings/chai/chai.d.ts",
        "./typings/express/express.d.ts",
        "./typings/mime/mime.d.ts",
        "./typings/mocha/mocha.d.ts",
        "./typings/mockery/mockery.d.ts",
        "./typings/node/node.d.ts",
        "./typings/serve-static/serve-static.d.ts",
        "./typings/sinon/sinon.d.ts",
        "./typings/tsd.d.ts"
    ]
}
